<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Light mode -->
    <!-- Screen background if light mode on -->
    <style name="SCREEN">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Texts background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Texts background if light mode on -->
    <style name="BUTTON">
        <item name="android:background">#80A8B6</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>